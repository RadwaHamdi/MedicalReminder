<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team6.mobile.iti"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AddMedicineActivity"
            android:label="@string/app_name"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/addMedicineStyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetScheduleActivity"
            android:theme="@style/addMedicineStyle" >
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/signin"
            android:theme="@style/addMedicineStyle" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/sign_up"
            android:theme="@style/addMedicineStyle" >
        </activity>
        <activity
            android:name=".ViewMedActivity"
            android:label="@string/view_med"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/addMedicineStyle" >
        </activity>
        <activity
            android:name=".ReminderListView"
            android:label="@string/app_name"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/addMedicineStyle" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/addMedicineStyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TimeAndDoseActivity"
            android:label="@string/title_activity_time_and_dose" >
        </activity>
    </application>

</manifest>